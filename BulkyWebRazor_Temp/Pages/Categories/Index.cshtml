@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@{
}

@{
	ViewData["Title"] = "Category Index";
}

@* <h1>@TempData["success"]</h1> *@
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create new category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped shadow-lg">
        <thead>
            <tr>
                <th>Category Name</th>
			    <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model.Categories ?? []) {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@category.Id" class="btn btn-primary mx-2 rounded-3">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="/categories/delete" asp-route-id="@category.Id" class="btn btn-danger mx-2 rounded-3">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>